# ========================================
# 必填配置项统一管理区域 | Required Configuration Section
# 请根据实际环境修改以下配置值 | Please modify the following configuration values according to your actual environment
# ========================================
custom-config:
  # 数据库密码 | MySQL database password
  mysql-password: your_mysql_password
  # Redis 密码 | Redis password
  redis-password: your_redis_password
  # 接口文档是否开启密码 | Whether to enable password for API documentation
  knife4j-auth-enable: true
  # 接口文档用户名 | API documentation username
  knife4j-username: admin
  # 接口文档密码 | API documentation password
  knife4j-password: your_password
  # 腾讯云 COS 配置 | Tencent Cloud COS configuration
  cos-host: your_cos_host
  cos-secret-id: your_cos_secret_id
  cos-secret-key: your_cos_secret_key
  cos-region: your_cos_region
  cos-bucket: your_cos_bucket_name
  # 阿里云 AI 配置 | Alibaba Cloud AI configuration
  aliyun-ai-api-key: your_aliyun_ai_api_key

# ========================================
# 应用配置 | Application Configuration
# ========================================
server:
  port: 8123
  servlet:
    context-path: /api
    # cookie 30 天过期 | Cookie expires in 30 days
    session:
      cookie:
        max-age: 2592000

spring:
  # 空间图片分表 | Space picture sharding configuration
  shardingsphere:
    datasource:
      names: intellipichub
      intellipichub:
        type: com.zaxxer.hikari.HikariDataSource
        driver-class-name: com.mysql.cj.jdbc.Driver
        url: jdbc:mysql://localhost:3306/intellipichub
        username: root
        # 从上方统一配置读取 | Read from unified configuration above
        password: ${custom-config.mysql-password}
    rules:
      sharding:
        tables:
          picture:
            actual-data-nodes: intellipichub.picture  # 动态分表 | Dynamic table sharding
            table-strategy:
              standard:
                sharding-column: spaceId
                sharding-algorithm-name: picture_sharding_algorithm  # 使用自定义分片算法 | Use custom sharding algorithm
        sharding-algorithms:
          picture_sharding_algorithm:
            type: CLASS_BASED
            props:
              strategy: standard
              algorithmClassName: com.jiahe.intellipichub.manager.sharding.PictureShardingAlgorithm
    props:
      sql-show: true
  application:
    name: jiahe-IntelliPicHub
  # 数据库配置 | Database configuration
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://localhost:3306/intellipichub
    username: root
    # 从上方统一配置读取 | Read from unified configuration above
    password: ${custom-config.mysql-password}
  # Redis 配置 | Redis configuration
  session:
    store-type: redis
    # session 30 天过期 | Session expires in 30 days
    timeout: 2592000
  redis:
    database: 0
    host: 127.0.0.1
    # 从上方统一配置读取 | Read from unified configuration above
    password: ${custom-config.redis-password}
    port: 6379
    timeout: 5000
  # session配置 | Session configuration
  # 文件上传大小 | File upload size limit
  servlet:
    multipart:
      max-file-size: 10MB

mybatis-plus:
  configuration:
    map-underscore-to-camel-case: false
    # 仅在开发环境开启日志 | Enable logging only in development environment
    # log-impl: org.apache.ibatis.logging.stdout.StdOutImpl
  global-config:
    db-config:
      logic-delete-field: isDelete # 全局逻辑删除的实体字段名 | Global logical delete entity field name
      logic-delete-value: 1 # 逻辑已删除值（默认为 1）| Logical deleted value (default is 1)
      logic-not-delete-value: 0 # 逻辑未删除值（默认为 0）| Logical not deleted value (default is 0)
    enable-sql-runner: true

# 接口文档配置 | API documentation configuration
knife4j:
  enable: true
  # 开启认证 | Enable authentication
  basic:
    # 从上方统一配置读取 | Read from unified configuration above
    enable: ${custom-config.knife4j-auth-enable}
    username: ${custom-config.knife4j-username}
    # 从上方统一配置读取 | Read from unified configuration above
    password: ${custom-config.knife4j-password}
  openapi:
    title: interface doc
    version: v1.0
    group:
      default:
        api-rule: package
        api-rule-resources:
          - com.jiahe.intellipichub.controller

# 腾讯云 COS 配置 | Tencent Cloud COS configuration
# 从上方统一配置读取 | Read from unified configuration above
cos:
  client:
    host: ${custom-config.cos-host}
    secretID: ${custom-config.cos-secret-id}
    secretKey: ${custom-config.cos-secret-key}
    region: ${custom-config.cos-region}
    bucket: ${custom-config.cos-bucket}

# 阿里云 AI 配置 | Alibaba Cloud AI configuration
# 如果要ai扩图功能的话则从上方统一配置读取 | Read from unified configuration above if AI image expansion feature is needed
aliYunAi:
  apiKey: ${custom-config.aliyun-ai-api-key}

